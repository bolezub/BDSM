<UserControl x:Class="BDSM.ServerStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BDSM"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="1000">
    <Border Background="#2C2646" CornerRadius="10" Margin="0,10">
        <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                <Ellipse Fill="{Binding StatusColor}" Width="20" Height="20" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding ServerName}" FontWeight="Bold" FontSize="18" Foreground="White"/>
                <TextBlock Text="{Binding Status}" Foreground="LightGray"/>
                <TextBlock Text="{Binding Pid}" Foreground="LightGray"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding ServerVersion}" Foreground="LightGray" VerticalAlignment="Center"/>
                    <materialDesign:PackIcon Kind="CloudDownloadOutline" Foreground="Orange" Margin="5,0,0,0" VerticalAlignment="Center">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsUpdateAvailable}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Players:" Foreground="LightGray" HorizontalAlignment="Center"/>
                <TextBlock Foreground="White" FontSize="20" HorizontalAlignment="Center">
                     <Run Text="{Binding CurrentPlayers}"/>/<Run Text="{Binding MaxPlayers}"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0" HorizontalAlignment="Center">
                <TextBlock Text="CPU" Foreground="LightGray"/>
                <TextBlock Text="{Binding CpuUsage, StringFormat='{}{0:F2}%'}" Foreground="White" FontSize="16"/>
            </StackPanel>

            <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="20,0" HorizontalAlignment="Center">
                <TextBlock Text="RAM" Foreground="LightGray"/>
                <TextBlock Text="{Binding RamUsage, StringFormat='{}{0} GB'}" Foreground="White" FontSize="16"/>
            </StackPanel>

            <Button Grid.Column="4" 
                    Command="{Binding ShowGraphDetailCommand}"
                    Background="Transparent" 
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Margin="20,0">
                <lvc:CartesianChart
                    Series="{Binding Series}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}"
                    Width="200"
                    Height="80"
                    IsHitTestVisible="False"
                    TooltipPosition="Hidden"
                    LegendPosition="Hidden"
                    ZoomMode="None">
                </lvc:CartesianChart>
            </Button>

            <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{DynamicResource MaterialDesignFloatingActionMiniButton}" Margin="5" ToolTip="Start"
                        Command="{Binding StartServerCommand}">
                    <materialDesign:PackIcon Kind="Play" />
                </Button>
                <Button Style="{DynamicResource MaterialDesignFloatingActionMiniButton}" Margin="5" ToolTip="Stop"
                        Command="{Binding StopServerCommand}">
                    <materialDesign:PackIcon Kind="Stop" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>