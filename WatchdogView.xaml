<UserControl x:Class="BDSM.WatchdogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BDSM"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
        <StackPanel>
            <TextBlock Text="Discord Watchdog" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
            <TextBlock Text="Configure the settings for the live Discord status and graph reporting." TextWrapping="Wrap" Foreground="LightGray" Margin="0,0,0,20"/>

            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="300"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                              Content="Enable Discord Watchdog"
                              IsChecked="{Binding IsEnabled}"
                              Margin="0,5,10,15"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Server Scan Interval (Seconds):" VerticalAlignment="Center" Margin="0,5,10,5"
                               ToolTip="How often to check server status and update the Discord text table."/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ScanIntervalSeconds, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="0,5" Width="80"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Graph Post Interval (Minutes):" VerticalAlignment="Center" Margin="0,5,10,5"
                               ToolTip="How often to generate and post new server performance graphs."/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding GraphPostIntervalMinutes, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="0,5" Width="80"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding TimeUntilNextScan}" Foreground="Gold" FontWeight="SemiBold" Margin="20,0,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding TimeUntilNextGraphPost}" Foreground="Gold" FontWeight="SemiBold" Margin="20,0,0,0"/>
                </Grid>
            </Border>

            <Button Content="Save Watchdog Settings"
                    Command="{Binding SaveWatchdogSettingsCommand}"
                    HorizontalAlignment="Left"
                    Margin="0,30,0,0"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>