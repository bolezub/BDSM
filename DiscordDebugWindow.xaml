<Window x:Class="BDSM.DiscordDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Discord Channel Debugger" Height="450" Width="400"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow"
        TextElement.Foreground="White">
    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#2C2646" Offset="0" />
            <GradientStop Color="#1E1A2E" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Command="{Binding FetchMessagesCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource BoolToVis}, ConverterParameter=invert}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Magnify" Margin="0,0,8,0"/>
                    <TextBlock Text="Fetch Last 100 Message IDs"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding DeleteMessagesCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource BoolToVis}, ConverterParameter=invert}"
                    Background="IndianRed"
                    Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="TrashCanOutline" Margin="0,0,8,0"/>
                    <TextBlock Text="Delete Fetched Messages"/>
                </StackPanel>
            </Button>
        </StackPanel>


        <ListView Grid.Row="1"
                  ItemsSource="{Binding MessageIds}"
                  Background="#11FFFFFF"
                  BorderThickness="1"
                  BorderBrush="#44FFFFFF"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Message ID" DisplayMemberBinding="{Binding}" Width="350"/>
                </GridView>
            </ListView.View>
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </ListView.Resources>
        </ListView>

        <StatusBar Grid.Row="2" Margin="0,5,0,0" Background="Transparent">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" Foreground="LightGray" TextWrapping="Wrap" />
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>